#supercamps-available.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %h5.bold.modal-title
          %b= t('.select_supercamp')
      .modal-body

        = field_set_tag t('.from_group_and_above') do
          - group.supercamps_on_group_and_above(existing_camp_id).each do |supercamp|
            = label_tag('supercamp_id_' + supercamp.id.to_s) do
              = radio_button_tag(:supercamp_id, supercamp.id)
              = format_camp_name_with_groups(supercamp)

      .modal-footer
        .btn-group
          = button_tag t('.submit'), class: 'btn btn-primary'
        = link_to(ti('button.cancel'), '#',
          class: 'link cancel',
          onclick: "event.preventDefault(); $('#supercamps-available').modal('hide')")

