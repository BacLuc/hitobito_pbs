- if can?(:completed_approvals, entry) && entry.event.is_a?(Event::Course)
  = section_table(t('.approvals'), @approvals) do |a|
    %td= format_attr(a, :status)
    %td= format_attr(a, :approver)
    %td= simple_format(a.comment)
    %td= format_attr(a, :approved_at)
