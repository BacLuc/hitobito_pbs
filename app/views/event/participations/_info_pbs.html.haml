- if @event.course_kind? && entry.roles.any? { |r| r.class.participant? }
  %p
    - if @event.kind.application_conditions.present? || @event.application_conditions.present?
      %dl.dl-horizontal
        = labeled_attr(@event, :application_conditions)

    - if @event.kind.general_information.present?
      %dl.dl-horizontal
        = labeled(t('events.kind_pbs.event_kind_general_information'), format_attr(@event.kind, :general_information))

    - if @event.kind.documents_text.present?
      %dl.dl-horizontal
        = labeled(Event::Kind.human_attribute_name(:documents_text), format_attr(@event.kind, :documents_text))
