- if entry.event.requires_approval? && entry.application && can?(:show_approvals, entry.application)
  = section_table(t('.title'), @approvals) do |a|
    %td= format_attr(a, :status)
    %td= format_attr(a, :approver)
    %td= simple_format(a.comment)
    %td= f(a.approved_at.try(:to_date))
